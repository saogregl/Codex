{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:8080",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Codex",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "sidecar": false,
        "scope": [
          {
            "name": "C:/ProgramData/anaconda3/Library/bin/pdtftotext.exe",
            "sidecar": false
          },
          {
            "name": "C:/ProgramData/anaconda3/Library/bin/pdftoppm.exe",
            "sidecar": false
          }
        ]
      },
      "fs": {
        "all": true,
        "scope": [
          "C:/Development/Codex-core/Articles/**"
        ]
      },
      "path": {
        "all": true
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "C:/Development/Codex-core/Articles/**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "C:/ProgramData/anaconda3/Library/bin/pdtftotext.exe",
        "C:/ProgramData/anaconda3/Library/bin/pdftoppm.exe"
      ],
      "icon": [
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.sipe.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all"
    },
    "security": {
      "csp": "default-src: 'self'; media-src 'self' asset:"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "theme": "Dark",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "title": "Sistema de Integração",
        "decorations": false
      }
    ]
  }
}